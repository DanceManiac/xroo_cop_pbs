#include "common.h"

struct 	v2p
{
 	float2	tc0	: 	TEXCOORD0;	// base
	float4	c	:	COLOR0;		// diffuse
};


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 main (v2p I) : SV_Target
{
	float4	result		=  I.c.a * s_base.Sample( smp_base, I.tc0 ).a;
			result.rgb	/= ( 1 + result.rgb );	// tonemap for LDR toning
	return	result;
}
